<hr>
<h1>New Item</h1>
<hr>
<div class="container-new-item">
  <form method="post" action='/items/new'>
    <div class="row">
      <div class="col-25">
        <label> Manufacturer:</label>
      </div>
      <div class="col-75">
        <select id="item" name="manufacturer_id">
          <% @manufacturers.each do |manufacturer| %>
            <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Name">Product Name:</label>
      </div>
      <div class="col-75">
        <input id="name" type="text" name="name"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="type">Product Type:</label>
      </div>
      <div class="col-75">
        <input id="type" type="text" name="type"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="description" >Description:</label>
      </div>
      <div class="col-75">
        <input id="description" type="text" name="description"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="purchase_price">Purchase Price:</label>
      </div>
      <div class="col-75">
        <input id="purchase_price" type="number" step="0.01" name="purchase_price"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="sell_price">Sell Price:</label>
      </div>
      <div class="col-75">
        <input id="sell_price" type="number" step="0.01" name="sell_price"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="quantity_in_stock">Quantity in Stock:</label>
      </div>
      <div class="col-75">
        <input id="quantity_in_stock" type="number" name="quantity_in_stock" />
      </div>
    </div>
    <div class="row">
      <div class="col-25">
      </div>
      <div class="col-75">
        <input type='submit' value="Create Item" id="create_button"/>
      </div>
    </div>
  </form>
</div>
